<form method="post" action="/figures/new">
Name <input type="text" name="figure[name]" id="figure_name"><br/>
<br/>
Titles<br/>
<br/>
<% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= t.id %>" value="<%= t.id %>"><%= t.name %></input><br/>
<% end %><br/>
<br/>
Create New Title:<br/>
<br/>
<input type="text" name="title[name]" id="new_title"><br/>
<br/>
Landmarks<br/>
<br/>
<% @landmarks.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= l.id %>" value="<%= l.id %>"><%= l.name %></input><br/>
<% end %><br/>
Create New Landmark:<br/>
<br/>
Name:<input type="text" name="landmark[name]" id="new_landmark">Year:
<input type="integer" name="landmark[year_completed]" id="landmark_year_completed]">
<input type="submit" value="Create New Figure">
</form>